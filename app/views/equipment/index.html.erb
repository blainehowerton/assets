<p id="notice"><%= notice %></p>

<br>
<div class="jumbotron">
  <h1>Equipment</h1>
  <p>The Equipment Manager lists and manages physical assets.</p>

  <% sum = 0 %>
  <% @equipment.each do |equipment| %>
    <% sum = sum + equipment.amount %>
  <% end %>

  <h5>Total Gross Value of Equipment: <%= number_to_currency(sum) %> </h5>
</div> 


<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Actions</h3>
  </div>
  <div class="panel-body">
    <a class="btn btn-primary btn-lg btn-block" href="/equipment/new" role="button">Add Equipment Item</a>
    <a class="btn btn-primary btn-lg btn-block" href="/deductions" role="button">List  & Add Deductions</a>
  </div>
</div>



<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Items</h3>
  </div>
  <div class="panel-body">
      <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Show</th>
            <th>Edit</th>
            <th>Name</th>
            <th>In service date</th>
            <th>Serial</th>
            <th>Amount</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @equipment.each do |equipment| %>
            <tr>
              <td>
                <button type="button" class="btn btn-default" aria-label="Left Align">
                <%= link_to '', equipment, :id => "button_id", :class => "glyphicon glyphicon-info-sign" %>
              </td>
              <td>
                <button type="button" class="btn btn-default" aria-label="Left Align">
                <%= link_to '', edit_equipment_path(equipment), :id => "button_id", :class => "glyphicon glyphicon-pencil" %>
              </td>
              <td><%= equipment.name %></td>
              <td><%= equipment.in_service_date %></td>
              <td><%= equipment.serial %></td>
              <td><%= number_to_currency(equipment.amount) %></td>
              <td><%= button_to 'Destroy', equipment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    </div>
</div>
<br>

