<div class="jumbotron">
  <h1>Customers</h1>
  <p>The Customer Manager lists and manages all customers.</p>
</div> 


<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Actions</h3>
  </div>
  <div class="panel-body">

<a class="btn btn-primary btn-lg btn-block" href="/customers/new" role="button">New Item</a>
  
  </div>
</div>



<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Items</h3>
  </div>
  <div class="panel-body">
      <div class="table-responsive">
      <table class="table table-striped">



        <thead>
          <tr>
            <th>Show</th>
            <th>Edit</th>
            <th>Company Name</th>
            <th>Name</th>
            <th>Email</th>
            <th>Office phone</th>
            <th>Cell phone</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td>
                <button type="button" class="btn btn-default" aria-label="Left Align">
                <%= link_to '', customer, :id => "button_id", :class => "glyphicon glyphicon-info-sign" %>
              </td>
              <td>
                <button type="button" class="btn btn-default" aria-label="Left Align">
                <%= link_to '', edit_customer_path(customer), :id => "button_id", :class => "glyphicon glyphicon-pencil" %>
              </td>
              <td><%= customer.company_name %></td>
              <td><%= customer.first_name %> <%= customer.last_name %></td>
              <td><%= customer.email %></td>
              <td><%= number_to_phone(customer.office_phone, area_code: true, extension: customer.office_extension) %></td>
              <td><%= number_to_phone(customer.cell_phone, area_code: true) %></td>
              <td><%= button_to 'Destroy', customer, method: :delete %></td>
            </tr>
          <% end %>
        </tbody>

      </table>



      </div>
      </div>

      
  </div>

<br>

