container_commands:
  01_migrate:
    command: rake db:migrate
    leader_only: true

    files:
  "/etc/nginx/conf.d/proxy.conf" :
    mode: "000755"
    owner: root
    group: root
    content: |
        http {
          client_max_body_size 200M;
        }
        server {
          client_max_body_size 200M;
        }
        location {
          client_max_body_size 200M;
        }